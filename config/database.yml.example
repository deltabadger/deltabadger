default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  username: postgres
  password: password

development:
  <<: *default
  database: deltabadger_development

test:
  <<: *default
  database: deltabadger_test

production:
  <<: *default
  database: deltabadger_production
  username: deltabadger
  password: <%= ENV['DELTABADGER_DATABASE_PASSWORD'] %>
