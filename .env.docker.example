# Deltabadger Docker Environment Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# REQUIRED SETTINGS - Must be configured before starting
# =============================================================================

# Rails secrets (generate with: openssl rand -hex 64)
SECRET_KEY_BASE=your_secret_key_base_here
DEVISE_SECRET_KEY=your_devise_secret_key_here

# Encryption keys for API credentials (generate with: openssl rand -hex 16)
API_KEY_ENCRYPTION_KEY=your_32_char_hex_key_here
API_SECRET_ENCRYPTION_KEY=your_32_char_hex_key_here
API_PASSPHRASE_ENCRYPTION_KEY=your_32_char_hex_key_here

# =============================================================================
# DATABASE (defaults work with docker-compose)
# =============================================================================

DB_HOST=postgres
DB_PORT=5432
DB_NAME=deltabadger_production
DB_USER=deltabadger
DB_PASSWORD=changeme_to_strong_password

# =============================================================================
# REDIS (defaults work with docker-compose)
# =============================================================================

REDIS_SIDEKIQ_URL=redis://redis:6379/0
REDIS_CABLE_URL=redis://redis:6379/1
REDIS_CACHE_URL=redis://redis:6379/2

# =============================================================================
# APPLICATION URLS
# =============================================================================

# Set these to your actual domain/IP
HOME_PAGE_URL=http://localhost:3000
APP_ROOT_URL=http://localhost:3000

# Exposed port (change if 3000 is in use)
APP_PORT=3000

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

RAILS_MAX_THREADS=5
WEB_CONCURRENCY=2
MAX_DB_CONNECTIONS=10

# =============================================================================
# EMAIL SETTINGS (optional)
# =============================================================================

# SMTP_ADDRESS=smtp.example.com
# SMTP_PORT=587
# SMTP_DOMAIN=example.com
# SMTP_USER_NAME=your_smtp_user
# SMTP_PASSWORD=your_smtp_password
# NOTIFICATIONS_SENDER=Deltabadger <noreply@example.com>

# =============================================================================
# EXTERNAL SERVICES (optional)
# =============================================================================

# Cloudflare Turnstile (captcha)
# CLOUDFLARE_TURNSTILE_SITE_KEY=
# CLOUDFLARE_TURNSTILE_SECRET_KEY=

# CoinGecko API
# COINGECKO_API_KEY=

# Telegram notifications
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_BOT_NICKNAME=

# AWS (for file storage/email)
# AWS_REGION=us-west-2
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
