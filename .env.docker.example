# Deltabadger Docker Environment Configuration
# Copy this file to .env.docker
# Works out of the box for local use. For production, generate proper secrets.

# =============================================================================
# SECRETS
# =============================================================================
# For production, generate with: openssl rand -hex 64
SECRET_KEY_BASE=dev-secret-key-not-for-production
DEVISE_SECRET_KEY=dev-devise-key-not-for-production

# For production, generate with: openssl rand -hex 16
APP_ENCRYPTION_KEY=dev-encryption-key00

# =============================================================================
# APPLICATION URLs
# =============================================================================
APP_ROOT_URL=http://localhost:3000
HOME_PAGE_URL=http://localhost:3000

# Comma-separated allowed hosts (optional, allows all if not set)
# ALLOWED_HOSTS=example.com,www.example.com

# Force SSL (set to true for HTTPS)
# FORCE_SSL=true

# =============================================================================
# DATABASE (defaults work with docker-compose)
# =============================================================================
DB_HOST=postgres
DB_NAME=deltabadger_production
DB_USER=deltabadger
DB_PASSWORD=localdev123

# =============================================================================
# REDIS (defaults work with docker-compose)
# =============================================================================
REDIS_SIDEKIQ_URL=redis://redis:6379/0
REDIS_CABLE_URL=redis://redis:6379/1
REDIS_CACHE_URL=redis://redis:6379/2

# =============================================================================
# EMAIL (optional - configure for notifications)
# =============================================================================
SMTP_ADDRESS=localhost
SMTP_DOMAIN=localhost
SMTP_PORT=25
SMTP_USER_NAME=
SMTP_PASSWORD=
NOTIFICATIONS_SENDER=noreply@localhost

# =============================================================================
# OPTIONAL
# =============================================================================
# Minimum seconds between orders
ORDERS_FREQUENCY_LIMIT=60

# Maximum database connections per process
# MAX_DB_CONNECTIONS=5

# Web server concurrency (defaults to CPU cores)
# WEB_CONCURRENCY=2

# Port to expose (default: 3000)
# APP_PORT=3000
