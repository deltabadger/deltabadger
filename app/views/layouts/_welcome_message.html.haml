.container
  .alert.db-alert--discount.db-alert--flex
    %span.db-alert--discount--info
      30% upgrade discount only for the next
    %span.db-alert--discount--countdown.nobreak
      6 : 12 : 30 : 30

- if @show_welcome_banner
  .container
    .alert.alert-primary.db-alert--welcome.db-alert--flex
      %span= t('welcome.banner_html', name: @user.name)
      %button(type="button" id="hide_welcome_banner_button" class="close" data-dismiss="alert" aria-label="Close")
        %span(aria-hidden="true")
          &times;
