<% if @show_welcome_banner %>
  <div data-controller="removals">
    <div class="alertbox alertbox--primary" style="margin-bottom: 2rem">
      <div style="width: 100%"><%= t('welcome.banner_html', name: current_user.name) %></div <div style="width: 100%">
      <%= button_to settings_hide_welcome_banner_path, method: :patch, title: "Close", class: "close", data: { action: "click->removals#submitAndRemove" } do %>
        <%= render partial: 'svg/24x24_x' %>
      <% end %>
    </div>
  </div>
<% end %>
