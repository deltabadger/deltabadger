<div class="black-friday"class data-controller="show-hide">
  <div data-show-hide-target="hideable">
    <div class="black-friday__body">
      <div class="big-discount">
        <div class="big-discount__number">
          <%= (BlackFriday::DISCOUNT_PERCENT * 100).to_i %>
        </div>
        <div class="big-discount__other">
          <div class="big-discount__other__perc">%</div>
          <div class="big-discount__other__off">OFF</div>
        </div>
      </div>
      <div class="black-friday-header">
        <h1><%= t('subscriptions.payment.black_friday_sale') %></h1>
        <h2><%= t('subscriptions.payment.pro_and_legendary_plans') %></h2>
      </div>

      <div data-controller="countdown" data-countdown-target-date-value="<%= BlackFriday.end_time.iso8601 %>" data-countdown-animation-class-value="pulse">
        <div class="countdown-timer">
          <span class="countdown-segment">
            <span data-countdown-target="days" class="value">0</span><small data-countdown-target="daysLabel"><%= t('subscriptions.payment.days').capitalize %></small>
          </span>
          <span class="countdown-segment">
            <span data-countdown-target="hours" class="value">0</span><small data-countdown-target="hoursLabel"><%= t('subscriptions.payment.hours').capitalize %></small>
          </span>
          <span class="countdown-segment">
            <span data-countdown-target="minutes" class="value">0</span><small data-countdown-target="minutesLabel"><%= t('subscriptions.payment.minutes').capitalize %></small>
          </span>
          <span class="countdown-segment countdown-second">
            <span data-countdown-target="seconds" class="value">0</span><small data-countdown-target="secondsLabel"><%= t('subscriptions.payment.seconds').capitalize %></small>
          </span>
        </div>
      </div>

      <% if show_upgrade_button %>
        <div>
          <%= link_to t('subscriptions.payment.upgrade_now'), upgrade_path, class: "btn btn-lg btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
  <nav class="black-friday-toggle" style="align-self: flex-end">
    <div class="black-friday-toggle__icon active" id="infoheader-icon" data-action="click->show-hide#toggle"  data-show-hide-target="toggleButton">
        <b>30% OFF</b>
        <%= render partial: 'svg/24x24_x' %>
    </div>
  </nav>
</div>

