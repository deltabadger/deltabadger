        = render 'layouts/devise_messages'

      .ml-auto.db--upgrade__hide
        - if current_user.unlimited?
          %a.btn.btn-link.text-success.db-icon-verified.mr-2.db-has-tooltip{href: upgrade_path}
            = current_user.subscription.display_name
            %i.material-icons-round.ml-1 verified_user
            .db-tooltip= t('subscriptions.days_left', count: current_user.plan_days_left)
        - else
          %a.btn.btn-link.mr-2.d-inline-flex.d-sm-none{:href => upgrade_path}
            %i.material-icons-round shopping_basket
          %a.btn.btn-outline-primary.mr-2.d-none.d-sm-inline-flex{:href => upgrade_path}
            = t('subscriptions.upgrade')
        %a.btn.btn-link.d-none.d-sm-inline-flex{href: root_path}= t('links.dashboard')
        %a.btn.btn-link.d-none.d-sm-inline-flex{href: affiliate_path}= t('links.referral_program')
        = link_to settings_path, class: 'btn btn-link' do
          %i.material-icons-round.d-inline.d-sm-none.pr-2 account_circle
          %span.d-none.d-sm-inline= t('links.settings')
        = link_to destroy_user_session_path, method: :delete, class: 'btn btn-link' do
          %i.material-icons-round.d-inline.d-sm-none.pr-2 power_settings_new
          %span.d-none.d-sm-inline= t('links.log_out')
      .ml-auto.db--upgrade__show.db-navbar__close
        %a{:href => root_path}
          %svg{:viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
