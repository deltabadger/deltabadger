.menu
  .menu__section.menu__section--top.menu__section--logo

    = link_to root_path, class: 'menu__logo', data: {turbo: false} do
      -unless current_user.subscription_name == 'legendary'
        = render 'svg/40x30_logo'
        -# = render 'layouts/devise_messages'
      -else
        = render 'svg/40x30_logo'
        -# = render 'svg/40x30_logo_legendary'

  .menu__section.menu__section--top.menu__section--main-menu

    = link_to root_path, class: 'menu__item menu__item--dashboard', data: { turbo: false, controller: 'tooltip', action: 'mouseenter->tooltip#showTooltip mouseleave->tooltip#hideTooltip' } do
      = render 'svg/24x24_dashboard'
      .tooltip
        = t('links.dashboard')

    = link_to portfolios_path, class: 'menu__item menu__item--analyzer', data: { turbo: false, controller: 'tooltip', action: 'mouseenter->tooltip#showTooltip mouseleave->tooltip#hideTooltip' } do
      = render 'svg/24x24_prism_c'
      .tooltip
        = "Prism"

    = link_to affiliate_path, class: "menu__item menu__item--referral-program", data: { turbo: false, controller: 'tooltip', action: 'mouseenter->tooltip#showTooltip mouseleave->tooltip#hideTooltip' } do
      = render 'svg/24x24_bitcoin'
      .tooltip
        = t('links.earn')

    = link_to settings_path, class: 'menu__item menu__item--settings', data: { turbo: false, controller: 'tooltip', action: 'mouseenter->tooltip#showTooltip mouseleave->tooltip#hideTooltip' } do
      = render 'svg/24x24_sliders'
      .tooltip
        = t('links.settings')

    = link_to 'https://skool.com/fire', class: "menu__item menu__item--community", data: { turbo: false, controller: 'tooltip', action: 'mouseenter->tooltip#showTooltip mouseleave->tooltip#hideTooltip' }, target: "_blank", rel: "noopener" do
      = render 'svg/24x24_fire'
      //.xsbadge= t('utils.new')
      .tooltip
        = t('links.community')

    - if current_user.subscription_name == 'legendary'
      = link_to legendary_path, class: 'menu__item menu__item--legendary-plan', data: { turbo: false, controller: 'tooltip', action: 'mouseenter->tooltip#showTooltip mouseleave->tooltip#hideTooltip' } do
        = render 'svg/24x24_legendary'
        .tooltip
          = t('links.legendary')
          = t('subscriptions.plan_life_time')
    - else
      = link_to upgrade_path, class: 'menu__item menu__item--upgrade', data: { turbo: false, controller: 'tooltip', action: 'mouseenter->tooltip#showTooltip mouseleave->tooltip#hideTooltip' } do
        = render 'svg/24x24_upgrade'
        .tooltip
          .tooltip__title
            = t('subscriptions.upgrade_plan')
          - if current_user.subscription_name != 'free'
            .tooltip__counter
              = t('subscriptions.days_left', count: current_user.subscription.days_left)

