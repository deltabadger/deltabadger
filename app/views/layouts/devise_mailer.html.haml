!!!
%html
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}
    :css
      body {
        background: #f5f5f5;
      }
      a {
        color: #0a45a4;
      }
  %body
    %table{:bgcolor => "#f5f5f5", :border => "0", :cellpadding => "0", :cellspacing => "0", :height => "100%", :style => "height: 100%; width: 100%; font-family: Inconsolata,Roboto,-apple-system,BlinkMacSystemFont,sans-serif", :width => "100%"}
      %tbody
        %tr
          %td{:valign => "top"}
            %table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "max-width: 580px; margin:0 auto; table-layout: fixed;"}
              %tbody
                %tr
                  %td{:colspan => "4"}

                    %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%", :style => "width: 100%" }
                      %tbody
                        %tr
                          %td{:colspan => "2", :height => "40", :style => "height: 40px"}
                        %tr
                          %td{:align => "left", :style => "text-align: center", :valign => "top"}
                            %a{:href => "https://deltabadger.com", :rel => "noreferrer nofollow noopener", :style => "display:inline-block; cursor:pointer; text-align:center;", :target => "_blank"}
                              %img.proton-embedded{:alt => "Deltabadger", :border => "0", :height => "46", :style => "height: 46px", :referrerpolicy => "no-referrer", :src => "https://asset.deltabadger.com/deltabadger-email-header.png"}
                        %tr
                          %td{:height => "40", :style => "height: 40px"}

                    %table{:bgcolor => "#ffffff", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "border-radius: 4px; font-size: 18px; box-shadow: 0 2px 8px rgba(0,0,0,0.05); padding: 20px 50px 20px", :width => "100%"}
                      %tbody
                        %tr
                          %td{:style => "text-align: center; padding-bottom: 50px;"}
                            = yield

                    %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%", :style => "width: 100%"}
                      %tbody
                        %tr
                          %td{:height => "40px", :style => "height: 40px"}  
                        %tr
                          %td{:align => "center", :valign => "top"}
                            %span{:style => "font-family: Inconsolata,Roboto,-apple-system,BlinkMacSystemFont,sans-serif; color:#9EB0C9; font-size:14px;"}
                              &copy;
                              = Time.current.year
                              %a{:href => "https://deltabadger.com", :rel => "noreferrer nofollow noopener", :style => "color:#9EB0C9 !important; text-decoration:none;", :target => "_blank"} Deltabadger OÜ
                        %tr
                          %td{:height => "40px", :style => "height: 40px"}  
