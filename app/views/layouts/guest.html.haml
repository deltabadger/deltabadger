    :javascript
      let root = document.documentElement;

      window.addEventListener("scroll", function() {
        const distance = window.scrollY;
        // root.style.setProperty('--scroll', distance);
        // root.style.setProperty('--scroll-a', distance - 480 * Math.min(Math.max($("html").width()/170, 10), 13.125)); // 1700

        if (distance > 10) {
          root.classList.add("has-been-scrolled");
        }

      });

      // input labels

      window.addEventListener('load', function() {
        document.querySelectorAll('input').forEach(function(input) {
          input.classList.toggle('db-form__input--empty', input.value === '');
          input.addEventListener('input', function() {
            this.classList.toggle('db-form__input--empty', this.value === '');
          });
        });
      });

