<% flash.each do |type, message| %>
  <%= tag.div class: "flash__message alert alert-primary", data: { controller: "removals", action: "animationend->removals#remove" }, role: "alert" do %>
  <%# "alert alert-primary" classes and "alert" role are just for inheriting Bootstrap styles from https://getbootstrap.com/docs/4.6/components/alerts/ %>
    <%= message %>
  <% end %>
<% end %>