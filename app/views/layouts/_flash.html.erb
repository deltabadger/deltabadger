<% flash.each do |flash_type, message| %>
  <% style_class = flash_type.to_sym == :alert ? 'danger' : 'primary' %>
  <%= tag.div class: "flash__message salert salert--#{style_class}", data: { controller: "removals", action: "animationend->removals#remove" }, role: "alert" do %>
    <%= button_tag class: 'modal__close', data: { action: 'removals#remove' } do %>
      <%= render partial: 'svg/24x24_x' %>
    <% end %>
    <%= message %>
  <% end %>
<% end %>