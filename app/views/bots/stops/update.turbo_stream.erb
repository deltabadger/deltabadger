<% if @bot.dca_single_asset? %>
  <%= turbo_stream.replace 'settings', partial: 'bots/dca_single_assets/settings', locals: { bot: @bot } %>
<% elsif @bot.dca_dual_asset? %>
  <%= turbo_stream.replace 'settings', partial: 'bots/dca_dual_assets/settings', locals: { bot: @bot } %>
<% end %>
<%= turbo_stream.replace 'exchange_select', partial: 'bots/exchange_select', locals: { bot: @bot } %>


<% @bot.user.bots.not_deleted.each do |bot| %>
  <%= turbo_stream.replace dom_id(bot, :status_button), partial: bot.legacy? ? 'bots/status/status_button_legacy' : 'bots/status/status_button', locals: { bot: bot } %>
<% end %>