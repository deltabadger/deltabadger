<%= render 'layouts/modal/base' do %>
  <div class="modal modal--xlarge">
    <%= button_tag type: 'button', class: 'modal__close', data: { action: 'modal--base#animateOutCloseAndCleanUp' } do %>
      <%= render partial: 'svg/24x24_close' %>
    <% end %>
    <div class="modal__header">
       <h1 class="modal__title"><%= t('bot.start_new_bot') %></h1>
    </div>

    <div class="itiles">

        <%= link_to new_bots_dca_single_assets_pick_buyable_asset_path, class: 'itile itile--bot-type', data: { action: 'click->modal--base#animateOutCloseAndCleanUp', turbo_frame: "modal" } do %>
            <div class="index-title"><%= t('bot.types.dca.title') %></div>
            <div class="index-info"><%= t('bot.types.dca.description').html_safe %></div>
        <% end %>

        <%= link_to new_bots_dca_dual_assets_pick_first_buyable_asset_path, class: 'itile itile--bot-type', data: { action: 'click->modal--base#animateOutCloseAndCleanUp', turbo_frame: "modal" } do %>
            <div class="index-title"><%= t('bot.types.dca_dual_asset.title') %></div>
            <div class="index-info"><%= t('bot.types.dca_dual_asset.description').html_safe %></div>
        <% end %>

        <div class="itile itile--bot-type itile--soon">
            <b class="sbadge sbadge--soon"><%= t('utils.soon') %></b>
            <div class="index-title"><%= t('bot.types.index_portfolio.title') %></div>
            <div class="index-info"><%= t('bot.types.index_portfolio.description') %></div>
        </div>

    </div>

  </div>
<% end %>
