<%= turbo_stream.append "bot_#{@bot.id}_orders_list" do %>
  <%= render partial: "bots/orders/order", collection: @orders %>
<% end %>

<% if @pagy.next.present? %>
  <%= turbo_stream.replace "orders_pagination" do %>
    <%= turbo_frame_tag "orders_pagination", src: bot_path(page: @pagy.next, format: :turbo_stream), loading: :lazy %>
  <% end %>
<% end %>