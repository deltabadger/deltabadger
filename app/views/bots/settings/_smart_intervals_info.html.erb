<%# &. because some migrated legacy bots point to unknown assets %>
<% quote = bot.quote_asset&.symbol || bot.transactions.last&.quote %>

<% if bot.smart_intervaled? && bot.smart_interval_quote_amount&.positive? && bot.quote_amount&.positive? %>
  <small id="<%= bot.new_record? ? "new-settings-smart-intervals-info" : "settings-smart-intervals-info" %>" class="small-info">
    <%= t("bot.settings.smart_intervals.info",
          quote_amount: bot.quote_amount.round(bot.decimals[:quote]),
          # &. because some migrated legacy bots point to unknown assets
          quote: quote,
          interval: t("bot.#{bot.interval}"),
          amount: bot.smart_interval_quote_amount.round(bot.decimals[:quote]),
          smart_interval: distance_of_time_in_words(bot.effective_interval_duration)) %>
  </small>
<% end %>