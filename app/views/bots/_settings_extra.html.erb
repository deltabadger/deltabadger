<%= form_with model: bot, url: bot_path(bot), method: :patch, id: "settings-extra", class: "widget", data: { controller: "form--submit" } do |form| %>
  <div class="toggle">
    <%= form.check_box :market_cap_adjusted, data: { action: "change->form--submit#submit" } %>
    <div class="toggle__style"></div>
    <%= form.label :market_cap_adjusted, t('bot.utils.mkt_cap_adjusted'), class: "label" %>

    <div class="tooltip-info-icon" data-controller="tooltip" data-action="click->tooltip#toggle">
      <div class="tooltip-icon--off">
        <%= render 'svg/24x24_info' %>
      </div>
      <div class="tooltip-icon--on">
        <%= render 'svg/24x24_info-filled' %>
      </div>
      <div class="tooltip tooltip--smart-allocation">
        <%= t('bot.utils.mkt_cap_adjusted_info') %>
      </div>
    </div>
  </div>
<% end %>
