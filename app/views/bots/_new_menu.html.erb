<div class="itiles">

    <%= link_to bots_path(create: true), class: 'itile itile--bot-type itile--dca', data: { action: 'click->modal--base#animateOutCloseAndCleanUp', turbo: false } do %>
        <div class="theme-img" style="background-image: url('<%= asset_path('strategy--dca.webp') %>')"></div>
        <div class="index-title"><%= t('bot.types.dca.title') %></div>
        <div class="index-info"><%= t('bot.types.dca.description').html_safe %></div>
    <% end %>

    <% path = current_user.subscription.free? ? upgrade_upgrade_instructions_path : barbell_new_step_to_first_asset_bots_path %>
    <%= button_to path, method: :get, params: { bots_barbell: {label: nil}}, class: 'itile itile--bot-type', data: { turbo_frame: "modal", action: 'click->modal--base#animateOutCloseAndCleanUp' } do %>
        <b class="sbadge sbadge--beta"><%= t('utils.beta') %></b>
        <div class="theme-img" style="background-image: url('<%= asset_path('strategy--barbell.webp') %>')"></div>
        <div class="index-title"><%= t('bot.types.barbell.title') %></div>
        <div class="index-info"><%= t('bot.types.barbell.description').html_safe %></div>
    <% end %>

    <div class="itile itile--soon">
        <b class="sbadge sbadge--soon"><%= t('utils.soon') %></b>
        <div class="index-title"><%= t('bot.types.index_portfolio.title') %></div>
        <div class="index-info"><%= t('bot.types.index_portfolio.description') %></div>
    </div>
    <div class="itile itile--soon">
        <b class="sbadge sbadge--soon"><%= t('utils.soon') %></b>
        <div class="index-title"><%= t('bot.types.custom_portfolio.title') %></div>
        <div class="index-info"><%= t('bot.types.custom_portfolio.description') %></div>
    </div>

</div>