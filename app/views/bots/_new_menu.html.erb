<div class="bot-menu">

  <%= link_to bots_path(create: true), class: 'bot-menu__item bot-menu__item--dca', data: { action: 'click->modal--base#animateOutCloseAndCleanUp', turbo: false } do %>
    <div class="bot-menu__item__title"><%= t('bot.types.dca.title') %></div>
    <div class="bot-menu__item__description"><%= t('bot.types.dca.description') %></div>
  <% end %>

  <%= button_to barbell_new_step_one_bots_path, method: :get, params: { bots_barbell: {label: nil}}, class: 'bot-menu__item bot-menu__item--barbell', data: { turbo_frame: "modal", action: 'click->modal--base#animateOutCloseAndCleanUp' } do %>
    <div class="bot-menu__item__title"><%= t('bot.types.barbell.title') %> <span class="sbadge sbadge--danger"><%= t('utils.new') %></span></div>
    <div class="bot-menu__item__description"><%= t('bot.types.barbell.description') %></div>
  <% end %>

  <div class="bot-menu__item inactive">
    <div class="bot-menu__item__title"><%= t('bot.types.index_portfolio.title') %> <span class="sbadge sbadge--soon"><%= t('utils.soon') %></span></div>
    <div class="bot-menu__item__description"><%= t('bot.types.index_portfolio.description') %></div>
  </div>

  <div class="bot-menu__item inactive">
    <div class="bot-menu__item__title"><%= t('bot.types.custom_portfolio.title') %> <span class="sbadge sbadge--soon"><%= t('utils.soon') %></span></div>
    <div class="bot-menu__item__description"><%= t('bot.types.custom_portfolio.description') %></div>
  </div>

</div>