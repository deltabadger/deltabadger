<%= render 'layouts/modal/base' do %>
  <div class="modal">
    <%= button_tag class: 'modal__close', data: { action: 'modal--base#animateOutCloseAndCleanUp' } do %>
      <%= render partial: 'svg/24x24_close' %>
    <% end %>
    <div class="modal__header">
       <h1 class="modal__title"><%= t('bot.warning.title') %></h1>
    </div>

    <p><%= t('bot.warning.dca_single_asset.intro',
              quote_symbol: quote_symbol,
              missed_symbol: missed_symbol,
              missed_minimum_base_size: missed_minimum_base_size,
              missed_minimum_quote_size: missed_minimum_quote_size,
              exchange_name: exchange_name) %></p>

    <p><%= t('bot.warning.buffer_explanation', count: 1) %></p>

    <!-- 2: General Note -->
    <p><%= t('bot.warning.general_note') %></p>

    <div class="large-button-wrapper" style="padding-top: 2rem;">
      <%= button_tag class: 'button button--success button--large', data: { action: 'modal--base#animateOutCloseAndCleanUp' } do %>
        <%= t('button.understand') %>
      <% end %>
    </div>
  </div>
<% end %>
