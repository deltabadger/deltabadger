<%= render 'layouts/modal/full_page' do %>
  <%= render partial: 'bots/barbell/new/progress_bar', locals: {
    current_step: :currencies
  } %>
  <div class="conversational conversational--bot-setup">
    Invest in
    <div class="ticker" style="background: <%= @bot.base0_asset.color %>"><%= @bot.base0_asset.symbol %></div>
    and
    <%= render partial: 'bots/barbell/new/asset_search_input', locals: {
      bot: @bot,
      search_form_path: barbell_new_step_to_second_asset_bots_path
    } %>
  </div>
  <%= render partial: 'bots/barbell/new/asset_search_results', locals: {
    bot: @bot,
    asset_field: :base1_asset_id,
    next_step_path: barbell_new_step_exchange_bots_path,
    assets: @assets
  } %>
<% end %>
