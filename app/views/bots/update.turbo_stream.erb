<% if @bot.legacy? %>
  <%= turbo_stream.replace dom_id(@bot, :label), @bot.label %>
  <%= turbo_stream_prepend_flash %>
<% else %>
  <%= turbo_stream.replace 'settings', partial: 'bots/settings/settings', locals: { bot: @bot } %>
  <%= turbo_stream.replace 'settings-extra-marketcap-allocation', partial: 'bots/settings/extra/marketcap_allocation', locals: { bot: @bot } %>
  <%= turbo_stream.replace 'settings-extra-amount-limit', partial: 'bots/settings/extra/amount_limit', locals: { bot: @bot } %>
  <%= turbo_stream.replace 'exchange_select', partial: 'bots/exchange_select', locals: { bot: @bot } %>
  <%= turbo_stream.replace dom_id(@bot, :label), @bot.label %>
  <%= turbo_stream.replace dom_id(@bot, :status_button), partial: 'bots/status/status_button', locals: { bot: @bot } %>

  <%# TODO: would be nice to show a little 'saved' in the form itself %>
  <%= turbo_stream_prepend_flash %>
<% end %>