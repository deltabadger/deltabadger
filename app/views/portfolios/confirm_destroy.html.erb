<%= render 'layouts/turbo_modal' do %>
  <div class="modal">
    <%= button_tag class: 'modal__close', data: { action: 'modal--base#animateOutCloseAndCleanUp' } do %>
      <%= render partial: 'svg/24x24_x' %>
    <% end %>
    <div class="modal__header">
      <h1 class="modal__title"><%= @portfolio.label %></h1>
    </div>
    <div class="modal__body modal__body--regular">
    <p>
      Do you want to delete this portfolio?
    </p>
    <div class="buttons buttons--col">
      <%= button_tag class: 'button button--outline button--large', data: { action: 'modal--base#animateOutCloseAndCleanUp' } do %>
        Cancel
      <% end %>
      <%= button_to t('utils.delete'), portfolio_path(@portfolio), method: :delete, class: 'button button--danger button--large' %>
    </div>
  </div>
<% end %>