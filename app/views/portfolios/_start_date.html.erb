<%= tag.div id: "start-date", class: "flex-row" do %>
  <%= form_with model: portfolio, url: portfolio_update_backtest_start_date_path(portfolio), method: :patch, data: { controller: "flatpickr", flatpickr_locale_value: I18n.locale, flatpickr_max_date_value: Time.now.utc - 2.days } do |form| %>
    <%= form.text_field :backtest_start_date, class: "fp_date sinput sinput--calendar", onchange: "this.form.requestSubmit();" %>
  <% end %>
  <%= button_to "YTD", portfolio_update_backtest_start_date_path(portfolio, { portfolio: { backtest_start_date: Date.today.beginning_of_year.strftime('%Y-%m-%d') } }), method: :patch, title: "Beginning of the year", class: "sbutton sbutton--link" %>
  <%= button_to "1Y", portfolio_update_backtest_start_date_path(portfolio, { portfolio: { backtest_start_date: 1.years.ago.strftime('%Y-%m-%d') } }), method: :patch, title: "1 year ago", class: "sbutton sbutton--link" %>
  <%= button_to "3Y", portfolio_update_backtest_start_date_path(portfolio, { portfolio: { backtest_start_date: 3.years.ago.strftime('%Y-%m-%d') } }), method: :patch, title: "3 years ago", class: "sbutton sbutton--link" %>
  <%= button_to "5Y", portfolio_update_backtest_start_date_path(portfolio, { portfolio: { backtest_start_date: 5.year.ago.strftime('%Y-%m-%d') } }), method: :patch, title: "5 years ago", class: "sbutton sbutton--link" %>
<% end %>
