<%= render 'layouts/modal/base' do %>
  <div class="modal modal--regular">
    <%= button_tag class: 'modal__close', data: { action: 'modal--base#animateOutCloseAndCleanUp' } do %>
      <%= render partial: 'svg/24x24_close' %>
    <% end %>
    <div class="modal__header">
       <h1 class="modal__title"><%= action_name == 'duplicate' ? t('analyzer.duplicate_portfolio') : t('utils.change_name') %></h1>
    </div>

    <%= render "edit_form", portfolio: @portfolio %>

  </div>
<% end %>
