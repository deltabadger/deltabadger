<%= link_to sanitize("&larr; Back to portfolio"), portfolio_path(@portfolio) %>

<%= render 'layouts/turbo_modal' do %>
  <%= button_tag class: 'modal__close', data: { action: 'modal--base#animateOutCloseAndCleanUp' } do %>
    <%= render partial: 'svg/24x24_x' %>
  <% end %>
  <div class="modal modal--regular">

    <div class="modal__header">
       <h1 class="modal__title"><%= t('analyzer.change_portfolio_name') %></h1>
    </div>

    <%= render "edit_form", portfolio: @portfolio %>

  </div>
<% end %>
