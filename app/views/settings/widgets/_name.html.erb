<div class="widget widget--settings">
  <h4 class="modal__title"><%= t('settings.index.name_section') %></h4>
  <%= turbo_frame_tag "update_name_form" do %>
    <%= form_with model: current_user, url: settings_update_name_path, class: "setting-form", data: { controller: "form--html5-validations form--label-animations", turbo_frame: "update_name_form" } do |f| %>

      <div class="form__row form__row--input">
        <%= f.text_field :name, class: 'form__input', value: "", placeholder: current_user.name, pattern: name_pattern %>
        <%= f.label :name, t('helpers.label.user.new_name'), class: "form__label" %>
      </div>

      <%= f.submit t('button.update'), class: "button button--sky" %>

    <% end %>
  <% end %>
</div>
