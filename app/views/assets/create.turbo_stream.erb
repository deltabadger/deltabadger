<% @portfolio.reload %>
<%= turbo_stream.append "portfolio-assets", partial: "asset", locals: { asset: @asset } %>
<% if @portfolio.assets.size == 1 %>
  <%= turbo_stream.replace "smart-allocation-controls", partial: "portfolios/smart_allocation_controls", locals: { portfolio: @portfolio } %>
  <%= turbo_stream.update "portfolio-empty", partial: "portfolios/empty", locals: { portfolio: @asset.portfolio } %>
<% elsif @portfolio.smart_allocation_on? %>
  <%= turbo_stream.replace "smart-allocation-controls", partial: "portfolios/smart_allocation_controls", locals: { portfolio: @portfolio } %>
  <%= render_turbo_stream_portfolio_assets(@portfolio) %>
<% end %>
<% if @portfolio.allocations_are_normalized? && @portfolio.smart_allocation_on? %>
  <%= render_turbo_stream_backtest_results(@backtest) %>
<% end %>
<%= render_turbo_stream_flash_messages %>