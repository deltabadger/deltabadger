<div class="devise__links">
  <% if controller_name != 'sessions' %>
    <%= link_to t('links.log_in'), new_session_path(resource_name), class: "button button--link" %>
    <span class="db-middot">&middot;</span>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t('links.sign_up'), new_registration_path(resource_name), class: "button button--link" %>
    <span class="db-middot">&middot;</span>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to t('links.resend_link'), new_confirmation_path(resource_name), class: "button button--link" %>
    <span class="db-middot">&middot;</span>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Resend unlock instructions", new_unlock_path(resource_name), class: "button button--link" %>
    <span class="db-middot">&middot;</span>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "button button--link" %>
      <span class="db-middot">&middot;</span>
    <% end %>
  <% end %>

  <%= render partial: "layouts/language_dropdown", locals: { extra_classes: "dropdown-wrapper--right dropdown-wrapper--up" } %>
</div>