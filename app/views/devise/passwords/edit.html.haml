.container.container--signup
  .row
    .d-none.d-lg-block.col-lg-6.col-xl-7.db-signup--text
      %h3.mb-5.mt-4.pt-2= t('ads.password_managers_html')
      .db-signup__list
        .db-signup__list--item.mb-4
          .material-icons-round check
          %a.ml-2(href="https://bitwarden.com/" target="_blank" ref="nofollow")= t('ads.bitwarden_title')
          = t('ads.bitwarden_text')
    .col-12.col-sm-10.col-md-8.offset-sm-1.offset-md-2.offset-lg-0.col-lg-6.col-xl-5
      .db-box
        %h3.db-modal-title= t('.title')
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
          = render "devise/shared/error_messages", resource: resource
          = f.hidden_field :reset_password_token
          .form-group
            = f.label :password, t('helpers.label.user.new_password')
            - if @minimum_password_length
              %em
                (#{t('forms.minimum_length', length: @minimum_password_length)})
            = f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control form-control-lg"
          .form-group
            = f.label :password_confirmation, t('helpers.label.user.new_password_confirmation')
            = f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-lg"
          .form-group.db-form-group--main-btn
            = f.submit t('.submit'), class: "btn btn-primary btn-lg"
        .text-center
          = render "devise/shared/links"
