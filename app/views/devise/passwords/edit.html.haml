.container
  .db-modal-positioner
    .modal-dialog
      .modal-content
        .modal-body
          %h3.db-modal-title Change your password
          = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
            = render "devise/shared/error_messages", resource: resource
            = f.hidden_field :reset_password_token
            .form-group
              = f.label :password, "New password"
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
              = f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control form-control-lg"
            .form-group
              = f.label :password_confirmation, "Confirm new password"
              = f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-lg"
            .form-group.db-form-group--main-btn
              = f.submit "Change my password", class: "btn btn-primary btn-lg"
          .text-center
            = render "devise/shared/links"
