.container.container--signup
  .row
    .d-none.d-lg-block.col-lg-6.col-xl-7.db-signup--text
      %h3.mb-5.mt-4.pt-2 Dollar-cost averaging into<br>Bitcoin is the new standard<br>for long-term savers.
      -# %h3.mb-5.mt-4.pt-2 If you were dollar-cost averaging<br>into Bitcoin for the last year,<br>you're now up <span class="text-success">+123%</span>
      .db-signup__list
        .db-signup__list--item.mb-4
          .material-icons-round check
          .ml-2
            Join our
            %a(href="#") Telegram group
        .db-signup__list--item.mb-4
          .material-icons-round check
          %a.ml-2(href="#")Follow us on Twitter
    .col-12.col-sm-10.col-md-8.offset-sm-1.offset-md-2.offset-lg-0.col-lg-6.col-xl-5
      .modal-dialog
        .modal-content
          .modal-body
            %h3.db-modal-title Edit #{resource_name.to_s.humanize}
            = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
              = render "devise/shared/error_messages", resource: resource
              .form-group
                = f.label :email
                = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg"
              - if devise_mapping.confirmable? && resource.pending_reconfirmation?
                %div
                  Currently waiting confirmation for: #{resource.unconfirmed_email}
              .form-group
                = f.label :password
                %i (leave blank if you don't want to change it)
                = f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg"
                - if @minimum_password_length
                  %em
                    = @minimum_password_length
                    characters minimum
              .form-group
                = f.label :password_confirmation
                = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg"
              .form-group
                = f.label :current_password
                %i (for confirmation)
                = f.password_field :current_password, autocomplete: "current-password", class: "form-control form-control-lg"
              .form-group
                = f.submit "Update", class: "btn btn-lg btn-primary"
            -# %h3 Cancel my account
            -# %p
            -#   Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
            -# = link_to "Back", :back
