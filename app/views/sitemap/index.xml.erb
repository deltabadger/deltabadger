<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc><%= @host %></loc>
    <lastmod>2021-02-17T10:00:35+00:00</lastmod>
    <priority>1.00</priority>
  </url>
  <% I18n.available_locales.each do |locale| %>
    <url>
      <loc><%= "#{@host}/#{locale}" %></loc>
      <lastmod>2021-02-17T10:00:35+00:00</lastmod>
      <priority>1.00</priority>
    </url>
    <url>
      <loc><%= "#{@host}#{terms_and_conditions_path(locale: locale)}" %></loc>
      <lastmod>2021-02-17T10:00:35+00:00</lastmod>
      <priority>0.64</priority>
    </url>
    <url>
      <loc><%= "#{@host}#{privacy_policy_path(locale: locale)}" %></loc>
      <lastmod>2021-02-17T10:00:35+00:00</lastmod>
      <priority>0.64</priority>
    </url>
    <url>
      <loc><%= "#{@host}#{about_path(locale: locale)}" %></loc>
      <lastmod>2021-02-17T10:00:35+00:00</lastmod>
      <priority>0.64</priority>
    </url>
    <url>
      <loc><%= "#{@host}#{contact_path(locale: locale)}" %></loc>
      <lastmod>2021-02-17T10:00:35+00:00</lastmod>
      <priority>0.64</priority>
    </url>
    <url>
      <loc><%= "#{@host}#{cookies_policy_path(locale: locale)}" %></loc>
      <lastmod>2021-02-17T10:00:35+00:00</lastmod>
      <priority>0.64</priority>
    </url>
    <url>
      <loc><%= "#{@host}#{articles_path(locale: locale)}" %></loc>
      <lastmod>2021-02-17T10:00:35+00:00</lastmod>
      <priority>0.8</priority>
    </url>
  <% end %>
  <% Article.published.each do |article| %>
    <url>
      <loc><%= "#{@host}#{article_path(article, locale: article.locale)}" %></loc>
      <lastmod><%= article.updated_at.strftime('%Y-%m-%dT%H:%M:%S+00:00') %></lastmod>
      <priority>0.7</priority>
    </url>
  <% end %>
</urlset>