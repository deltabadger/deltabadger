
<div class="infoheader">
  <nav class="infoheader__head">
    <div>
      <h2 class="infoheader__h" id="infoheader-title">

        <% input_field = form_with url: dashboard_path, method: :get, data: { controller: "form--submit", turbo_frame: "tiles" }, html: { style: "display: inline;" } do |f| %>
          <%= f.text_field :invest_amount,
            value: invest_amount,
            class: "hinput",
            placeholder: "0",
            style: " width: #{invest_amount.to_s.size}ch; min-width: 1ch",
            oninput: "this.style.width = (this.value.length) + 'ch'",
            data: { action: "change->form--submit#submit" }
          %>
        <% end %>

        <%# <% input_field = content_tag(:input, nil,
          class: 'hinput',
          value: '1000',
          placeholder: '0',
          style: 'width: 4ch; min-width: 1ch',
          oninput: "this.style.width = (this.value.length) + 'ch'"
        ) %>
        <%= t('dca_calculator.title',
          amount: input_field,
          goal: t('dca_calculator.goal_millionaire')
        ).html_safe %>
      </h2>
    </div>
    <div class="infoheader__icon active"  id="infoheader-icon">i</div>
  </nav>

  <%= turbo_frame_tag "tiles", class: "itiles" do %>
    <div class="itile itile--bitcoin">
      <h3 class="itile__title">Bitcoin</h3>
      <div class="itile__value">
        <%= localized_duration(simulation_results['btc']) %>
      </div>
    </div>
    <div class="itile itile--qqq">
      <h3 class="itile__title">QQQ</h3>
      <div class="itile__value">
        <%= localized_duration(simulation_results['ndx']) %>
      </div>
    </div>
    <div class="itile itile--voo">
      <h3 class="itile__title">S&P 500</h3>
      <div class="itile__value">
        <%= localized_duration(simulation_results['gspc']) %>
      </div>
    </div>
    <div class="itile itile--gold">
      <h3 class="itile__title"><%= t('utils.gold') %></h3>
      <div class="itile__value">
        <%= localized_duration(simulation_results['gld']) %>
      </div>
    </div>
    <div class="itile itile--bonds">
      <h3 class="itile__title"><%= t('utils.dax') %></h3>
      <div class="itile__value">
        <%= localized_duration(simulation_results['gdaxi']) %>
      </div>
    </div>
    <div class="itile itile--cash">
      <h3 class="itile__title"><%= t('utils.cash') %></h3>
      <div class="itile__value">
        <%= localized_duration(simulation_results['usd']) %>
      </div>
    </div>
  <% end %>
</div>