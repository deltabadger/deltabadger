              .form-group.mr-2 USD /
              .form-group.mr-2
                %select#exampleFormControlSelect1.form-control{:disabled => "disabled"}
                  %option{:value => "hour"} Hour
                  %option{:value => "day"} Day
                  %option{:value => "week"} Week
                  %option{:value => "month"} Month
        .db-bots__item.db-bot.db-bot--dca.db-bot--pick-exchange.db-bot--running.db-bot--collapsed.db-bots__item--homepage
          .db-bot__header
            .btn.btn-outline-primary
              %span.d-none.d-sm-inline Pause
              %svg{:class => "btn__svg-icon db-svg-icon db-svg-icon--pause", :xmlns => "http://www.w3.org/2000/svg", :viewBox => "0 0 24 24"}
                %path{:d => "M8 19a2 2 0 002-2V7c0-1.1-.9-2-2-2s-2 .9-2 2v10c0 1.1.9 2 2 2zm6-12v10c0 1.1.9 2 2 2s2-.9 2-2V7c0-1.1-.9-2-2-2s-2 .9-2 2z"}
