%main.container.db-main
  %section.db-main__section.db-main__section--primary
    = render 'layouts/svg_more'
    .row
      .col-md-12.col-lg-7.db-flex-centered-vertically
        .db-flex-centered-vertically__content
          %h1.mb-4
            Automate buying any<br />
            cryptocurrency
            %span.db-anim-rotator
              %span.db-anim-rotator--1 hourly
