<% content_for :body_class, ".view--dashboard" %>

<div class="infoheader">
  <nav class="infoheader__head">
    <div>
      <h2 class="infoheader__h" id="infoheader-title">
        How long you had to DCA $<input class="hinput" value="1000" placeholder="0" style="width: 4ch; min-width: 1ch" oninput="this.style.width = (this.value.length) + 'ch';">/month to become a millionaire?
      </h2>
    </div>
    <div class="infoheader__icon active"  id="infoheader-icon">i</div>
  </nav>

  <div class="itiles" id="tiles">
    <div class="itile itile--bitcoin">
      <h3 class="itile__title">Bitcoin</h3>
      <div class="itile__value">8 years 6 months 19&nbsp;days</div>
    </div>
    <div class="itile itile--qqq">
      <h3 class="itile__title">QQQ</h3>
      <div class="itile__value">13 years 4 months 22&nbsp;days</div>
    </div>
    <div class="itile itile--voo">
      <h3 class="itile__title">S&P 500</h3>
      <div class="itile__value">22 years 2 months 4&nbsp;days</div>
    </div>
    <div class="itile itile--gold">
      <h3 class="itile__title">Gold</h3>
      <div class="itile__value">23 years 7 months 15&nbsp;days</div>
    </div>
    <div class="itile itile--bonds">
      <h3 class="itile__title">Bonds</h3>
      <div class="itile__value">39 years 4&nbsp;days</div>
    </div>
    <div class="itile itile--cash">
      <h3 class="itile__title">Cash</h3>
      <div class="itile__value">83 years</div>
    </div>
  </div>
</div>

<%= render 'layouts/banners/welcome_message' %>
<%= render 'layouts/banners/news_message' %>
<%= render 'layouts/banners/referral_message' %>
<%= render 'layouts/limit_reached' %>

<div id="dashboard"></div>

<script type="text/javascript">
  document.addEventListener('DOMContentLoaded', function() {
    document.getElementById('infoheader-icon').addEventListener('click', function() {
      document.getElementById('infoheader-title').classList.toggle('hidden');
      document.getElementById('tiles').classList.toggle('hidden');
      this.classList.toggle('active');  // Toggle the .active class on the clicked .infoheader__icon
    });
  });
</script>