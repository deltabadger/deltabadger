- code_presenter = Presenters::RefCodes::Show.new(affiliate)
%table.table.db-table--checkout
  %tbody.table-borderless
    - if code_presenter.valid?
      %tr
        %td.text-success.pr-0.pl-0(scope="col")
          <i class="material-icons-round">check_circle</i>
        %td(scope="col")
          %b.text-success #{code_presenter.discount_percent}% discount for the first purchase.<br>
          %span.db-billing-item__info
            - if code_presenter.info?
              Thanks to the referral link from
              %b
                <a href="#{code_presenter.visible_path}">#{code_presenter.visible_name}</a></b>
    - else
      %tr.text-danger
        %td(scope="col")
          <i class="material-icons-round">broken_image</i>
        %td(scope="col")
          %b The referral link seems invalid or obsolete.
