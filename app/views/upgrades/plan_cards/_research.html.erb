<div class="widget--pricing__name">
  <%= t('subscriptions.research') %>
</div>

<% if payment_option.present? %>
  <div class="widget--pricing__amount">
    <% if reference_payment_option.base_price != payment_option.base_price %>
      <span class="widget--pricing__amount__t widget--pricing__amount__t--main">
        <%= localized_price(payment_option.virtual_price('base_price', 1.month), payment_option.currency) %><span class="price-period"><%= t('subscriptions.per_month_html') %></span>
      </span>

      <span class="widget--pricing__amount__t widget--pricing__amount__t--main widget--pricing__amount__t--previous">
        <%= localized_price(reference_payment_option.virtual_price('base_price', 1.month), payment_option.currency) %><span class="price-period"><%= t('subscriptions.per_month_html') %></span>
      </span>
    <% else %>
      <span class="widget--pricing__amount__t widget--pricing__amount__t--main">
        <%= localized_price(payment_option.virtual_price('base_price', 1.month), payment_option.currency) %><span class="price-period"><%= t('subscriptions.per_month_html') %></span>
      </span>
    <% end %>
  </div>
<% end %>

<ul>
  <li><%= t('subscriptions.features.premium_newsletter') %></li>
  <li><%= t('subscriptions.features.portfolio_analyzer') %></li>
</ul>
