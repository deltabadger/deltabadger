<h1><%= t('.subject') %></h1>

<p><%= t('mailer.greeting_name', name: @user.name) %></p>

<%= t('.template_html', 
       expired_plan: localized_plan_name(@expired_plan),
       stopped_bots_count: @stopped_bots.size) %>

  <% if @stopped_bots.any? %>
    <% if @stopped_bots.size == 1 %>
      <p><%= t('.stopped_bots_list', count: 1, label: @stopped_bots.first.label) %></p>
    <% else %>
      <p><%= t('.stopped_bots_list', count: @stopped_bots.size) %></p>
      <ul>
        <% @stopped_bots.each do |bot| %>
          <li><%= bot.label %> (<%= bot.exchange.name %>)</li>
        <% end %>
      </ul>
    <% end %>
    <p><%= t('.restart_action', count: @stopped_bots.size) %> <%= t('.settings_preserved') %></p>
  <% else %>
    <p><%= t('.no_bots_affected') %></p>
  <% end %>

<p>
  <%= link_to t('.renew_subscription'), upgrade_url(locale: I18n.locale), 
             style: "background-color: #28a745; color: white; padding: 12px 24px; text-decoration: none; border-radius: 4px; display: inline-block; font-weight: bold;" %>
</p> 