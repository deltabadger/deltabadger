<h1><%= t('.subject') %></h1>

<p><%= t('mailer.greeting_name', name: @user.name) %></p>

<%= t('.template_html', 
       days_until_expiry: @days_until_expiry,
       expiry_date: @expiry_date.strftime('%B %d, %Y'),
       plan_name: localized_plan_name(@current_plan)) %>

<% if @affected_bots.any? %>
  <% if @affected_bots.size == 1 %>
    <p><%= t('.bots_will_stop', count: 1, label: @affected_bots.first.label) %></p>
  <% else %>
    <p><%= t('.bots_will_stop', count: @affected_bots.size) %></p>
    <ul>
      <% @affected_bots.each do |bot| %>
        <li><%= bot.label %> (<%= bot.exchange.name %>)</li>
      <% end %>
    </ul>
  <% end %>
<% end %>

<% if @has_research_features %>
  <p><%= t('.research_access_lost') %></p>
<% end %>

<% if @affected_bots.empty? && @has_research_features %>
  <p><%= t('.research_only_warning') %></p>
<% end %>

<p>
  <%= link_to t('.renew_subscription'), upgrade_url(locale: I18n.locale), 
             style: "background-color: #007bff; color: white; padding: 12px 24px; text-decoration: none; border-radius: 4px; display: inline-block; font-weight: bold;" %>
</p> 