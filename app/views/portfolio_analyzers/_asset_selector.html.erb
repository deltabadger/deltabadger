<%= turbo_frame_tag "asset_selector" do %>
  <%= tag.div data: {
      # stream_update_class: "animate-assets-in animate-assets-out",
  } do %>
    <% query_assets.each do |asset| %>
      <%= tag.div id: "add_#{asset}" do %>
        <%= asset %>
        <%= button_to "Add",
                      add_asset_portfolio_analyzer_path(asset: asset),
                      method: :post %>
      <% end %>
    <% end %>
  <% end %>
<% end %>