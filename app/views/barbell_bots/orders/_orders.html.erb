<%= turbo_stream_from "bot_#{bot.id}", :orders %>

<%= turbo_frame_tag "bot_#{bot.id}_orders" do %>
  <div class="widget widget--table">
    <% if bot.transactions.any? %>
      <table class="table table-borderless table-striped">
        <thead>
          <tr>
            <th scope="col"><%= t('data_labels.date') %></th>
            <th scope="col"><%= t('amount') %></th>
            <th scope="col"><%= t('value') %></th>
          </tr>
        </thead>
        <tbody id="bot_<%= bot.id %>_orders_list">
        </tbody>
      </table>
      <%= turbo_frame_tag "orders_pagination", src: barbell_bot_path(bot, format: :turbo_stream), loading: :lazy %>
    <% else %>
      <div style="height: 100%; display: flex; align-items: center; justify-content: center; color: var(--label)">
        <%= t('bot.no_orders_info') %>
      </div>
    <% end %>
  </div>
<% end %>