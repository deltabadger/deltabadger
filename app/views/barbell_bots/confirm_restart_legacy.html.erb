<%= render 'layouts/turbo_modal' do %>
  <%= button_tag class: 'modal__close', data: { action: 'modal--base#animateOutCloseAndCleanUp' } do %>
    <%= render partial: 'svg/24x24_x' %>
  <% end %>
  <div class="modal__body modal__body--regular">
    <% if @barbell_bot.restarting_within_interval? %>
      <p>
        <%= t('bots.buttons.start.on_schedule.info_html', time: time_ago_in_words(@barbell_bot.next_interval_checkpoint_at)) %>
      </p>
      <div>
        <%= button_to t('bots.buttons.start.on_schedule.skip'), start_api_bot_path(@barbell_bot, continue_params: {continue_schedule: false}), class: 'button', data: { action: 'click->modal--base#animateOutCloseAndCleanUp' } %>
        <%= button_to t('bots.buttons.start.on_schedule.continue'), start_api_bot_path(@barbell_bot, continue_params: {continue_schedule: true, price: @barbell_bot.missed_amount}), class: 'button button--success', data: { action: 'click->modal--base#animateOutCloseAndCleanUp' } %>
      </div>
    <% else %>
      <p>
        <%= t('bots.buttons.start.missed.info_html', amount: rounded_quote_amount_for(exchange: @barbell_bot.exchange, base_asset: @barbell_bot.base, quote_asset: @barbell_bot.quote, amount: @barbell_bot.missed_amount), quote: @barbell_bot.quote) %>
      </p>
      <div>
        <%= button_to t('bots.buttons.start.missed.skip'), start_api_bot_path(@barbell_bot, continue_params: {continue_schedule: false, price: @barbell_bot.missed_amount}), class: 'button', data: { action: 'click->modal--base#animateOutCloseAndCleanUp' } %>
        <%= button_to t('bots.buttons.start.missed.continue'), start_api_bot_path(@barbell_bot, continue_params: {continue_schedule: true}), class: 'button button--success', data: { action: 'click->modal--base#animateOutCloseAndCleanUp' } %>
      </div>
    <% end %>
  </div>
<% end %>