<%= turbo_stream.append "bot_#{@barbell_bot.id}_transactions" do %>
  <%= render partial: "barbell_bots/bot/transaction", collection: @transactions %>
<% end %>

<% if @pagy.next.present? %>
  <%= turbo_stream.replace "transactions-pagination" do %>
    <%= turbo_frame_tag "transactions-pagination", src: barbell_bot_path(page: @pagy.next, format: :turbo_stream), loading: :lazy %>
  <% end %>
<% end %>