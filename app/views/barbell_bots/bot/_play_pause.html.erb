<div class="page-head page-head--mini">
  <div class="time-counter time-counter--success">
    <%= turbo_stream_from "bot_#{bot.id}", :countdown %>
    <%= render "barbell_bots/bot/countdown", bot: bot %>
  </div>

  <div class="flex-row">
    <%= turbo_frame_tag "bot_#{bot.id}_controls" do %>
      <% if bot&.working? || bot&.pending? %>
        <%= button_to stop_barbell_bot_path(bot), class: "sbutton sbutton--primary sbutton--outline", data: { turbo_frame: "bot_#{bot.id}_controls", hw_animate_out: "animate-button-to-start-shape"} do %>
          <div class="animicon animicon--stop">
            <div class="animicon__a"></div>
            <div class="animicon__b"></div>
          </div>
        <% end %>
      <% else %>
        <%= button_to start_barbell_bot_path(bot), class: "sbutton sbutton--success", data: { turbo_frame: "bot_#{bot.id}_controls", hw_animate_out: "animate-button-to-stop-shape"} do %>
          <div class="animicon animicon--start">
            <div class="animicon__a"></div>
            <div class="animicon__b"></div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <%= button_to "Delete Bot", barbell_bot_path(bot), class: "btn btn-danger mb-4", method: :delete %>

</div>