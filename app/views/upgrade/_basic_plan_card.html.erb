<div class="db-plans__item__name">
  <%= t('subscriptions.basic') %>
  <div class="db-years">
    <% if current_user.subscription.name == SubscriptionPlan::BASIC_PLAN && current_user.subscription.days_left %>
      <div class="text-success"><%= t('subscriptions.days_left', count: current_user.subscription.days_left) %></div>
    <% else %>
      <%= t('subscriptions.plan_1_year') %>
    <% end %>
  </div>
</div>
<div class="db-plans__item__amount">
  <% unless current_user.subscription.name == SubscriptionPlan::BASIC_PLAN && current_user.subscription.days_left %>
    <% if payment.base_price != payment.adjusted_base_price %>
      <div class="db-plans__item__amount__t db-plans__item__amount__t--previous">
        <%= format_price(payment.base_price, currency) %>
      </div>
      <div class="db-plans__item__amount__t db-plans__item__amount__t--new">
        <%= format_price(payment.adjusted_base_price, currency) %>
      </div>
    <% else %>
      <div class="db-plans__item__amount__t">
        <%= format_price(payment.base_price, currency) %>
      </div>
    <% end %>
  <% end %>
</div>
<div class="db-plans__item__info">
  <p><%= t('subscriptions.basic_info') %></p>
  <ul>
    <li><%= render 'svg/24x24_check' %><%= t('subscriptions.features.dca') %></li>
    <li><%= render 'svg/24x24_check' %><%= t('subscriptions.features.withdrawals') %></li>
  </ul>
</div>