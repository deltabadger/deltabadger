<div class="db-checkout-summary modal-content">
  <div class="db-checkout-summary__item db-checkout-summary__item--vat">
    <div class="db-checkout-summary__item__info">
      <%= '+' + t('subscriptions.payment.vat') %>
      <span class='vat-percent'><%= format_percent(payment.vat_percent) %></span>
    </div>
    <div class="db-checkout-summary__item__quote">
      <%= tag.span class: "#{payment.subscription_plan.name}-total-vat" do %>
        <%= format_price(payment.vat_amount, payment.currency) %>
      <% end %>
    </div>
  </div>
  <div class="db-checkout-summary__item db-checkout-summary__item--sum">
    <div class="db-checkout-summary__item__info"><%= t('subscriptions.payment.you_pay') %></div>
    <div class="db-checkout-summary__item__quote">
      <%= tag.span class: "#{payment.subscription_plan.name}-total-price" do %>
        <%= format_price(payment.price_with_vat, payment.currency) %>
      <% end %>
    </div>
  </div>
</div>