<div class="widget--pricing__name">
  <%= t('subscriptions.pro') %>
</div>

<div class="widget--pricing__amount">
  <% unless current_user.subscription.name == SubscriptionPlan::PRO_PLAN && current_user.subscription.days_left %>
    <% if payment_option.base_price != payment_option.adjusted_base_price %>
      <span class="widget--pricing__amount__t widget--pricing__amount__t--previous">
        <%# <%= format_price(payment_option.base_price, payment_option.currency) %>
        <%= t('subscriptions.per_year_html', count_html: format_price(payment_option.virtual_price('base_price', 1.year), payment_option.currency)) %>
      </span>
      <span class="widget--pricing__amount__t widget--pricing__amount__t--new">
        <%# <%= format_price(payment_option.adjusted_base_price, payment_option.currency) %>
        <%= t('subscriptions.per_year_html', count_html: format_price(payment_option.virtual_price('adjusted_base_price', 1.year), payment_option.currency)) %>
      </span>
    <% else %>
      <span class="widget--pricing__amount__t">
        <%= t('subscriptions.per_year_html', count_html: format_price(payment_option.virtual_price('base_price', 1.year), payment_option.currency, 0)) %>
      </span>
    <% end %>
  <% end %>
</div>

<div class="widget--pricing__period">
  <% if current_user.subscription.name == SubscriptionPlan::PRO_PLAN && current_user.subscription.days_left %>
    <%= t('subscriptions.days_left', count: current_user.subscription.days_left) %>
  <% else %>
    <%= t("subscriptions.plan_#{payment_option.subscription_plan_variant.years}_year") %><br>
    <%= t("subscriptions.billed#{payment_option.subscription_plan_variant.years}") %>
  <% end %>
</div>

<div class="widget--pricing__info">
  <p><%= t('subscriptions.pro_info') %></p>
  <ul>
    <li><%= t('subscriptions.features.dca') %></li>
    <li><%= t('subscriptions.features.withdrawals') %></li>
    <li>FeeCutter</li>
    <li><%= t('subscriptions.features.price_limit') %></li>
    <li><%= t('subscriptions.features.analyzer_html') %></li>
  </ul>
</div>