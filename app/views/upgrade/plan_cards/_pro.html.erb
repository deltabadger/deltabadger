<div class="db-plans__item__name">
  <%= t('subscriptions.pro') %>
  <div class="db-years">
    <% if current_user.subscription.name == SubscriptionPlan::PRO_PLAN && current_user.subscription.days_left %>
      <div class="text-success"><%= t('subscriptions.days_left', count: current_user.subscription.days_left) %></div>
    <% else %>
      <%= t("subscriptions.plan_#{payment_option.subscription_plan_variant.years}_year") %>
    <% end %>
  </div>
</div>
<div class="db-plans__item__amount">
  <% unless current_user.subscription.name == SubscriptionPlan::PRO_PLAN && current_user.subscription.days_left %>
    <% if payment_option.base_price != payment_option.adjusted_base_price %>
      <div class="db-plans__item__amount__t db-plans__item__amount__t--previous">
        <%= format_price(payment_option.base_price, payment_option.currency) %>
      </div>
      <div class="db-plans__item__amount__t db-plans__item__amount__t--new">
        <%= format_price(payment_option.adjusted_base_price, payment_option.currency) %>
      </div>
    <% else %>
      <div class="db-plans__item__amount__t">
        <%= format_price(payment_option.base_price, payment_option.currency) %>
      </div>
    <% end %>
  <% end %>
</div>
<div class="db-plans__item__info">
  <p><%= t('subscriptions.pro_info') %></p>
  <ul>
    <li><%= render 'svg/24x24_check' %><%= t('subscriptions.features.dca') %></li>
    <li><%= render 'svg/24x24_check' %><%= t('subscriptions.features.withdrawals') %></li>
    <li><%= render 'svg/24x24_check' %>FeeCutter</li>
    <li><%= render 'svg/24x24_check' %><%= t('subscriptions.features.price_limit') %></li>
    <li><%= render 'svg/24x24_check' %><%= t('subscriptions.features.analyzer_html') %></li>
  </ul>
</div>