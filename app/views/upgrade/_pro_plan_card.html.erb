<div class="db-plans__item__name">
  <%= t('subscriptions.pro') %>
  <div class="db-years">
    <% if days_left %>
      <div class="text-success"><%= t('subscriptions.days_left', count: current_user.plan_days_left) %></div>
    <% else %>
      <%= t('subscriptions.plan_1_year') %>
    <% end %>
  </div>
</div>
<div class="db-plans__item__amount">
  <% unless days_left %>
    <% if cost_presenter.base_price != cost_presenter.flat_discounted_price %>
      <div class="db-plans__item__amount__t db-plans__item__amount__t--previous">
        <span class='db-show--eu'>€</span><span class='db-show--other'>$</span><span class='pro-base-price'><%= cost_presenter.base_price %></span>
      </div>
      <div class="db-plans__item__amount__t db-plans__item__amount__t--new">
        <span class='db-show--eu'>€</span><span class='db-show--other'>$</span><span class='pro-discounted-price'><%= cost_presenter.flat_discounted_price %></span>
      </div>
    <% else %>
      <div class="db-plans__item__amount__t">
        <span class='db-show--eu'>€</span><span class='db-show--other'>$</span><span class='pro-base-price'><%= cost_presenter.base_price %></span>
      </div>
    <% end %>
  <% end %>
</div>
<div class="db-plans__item__info">
  <%= t('subscriptions.pro_description_html') %>
  <p><b class="sbadge sbadge--danger"><%= t('utils.new') %></b> <%= t('subscriptions.analyzer_html') %></p>
  <p><b class="sbadge sbadge--warning"><%= t('utils.soon') %></b> <%= t('subscriptions.expires_soon_html') %></p>
</div>