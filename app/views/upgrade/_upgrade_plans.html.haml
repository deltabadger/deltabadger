- unless current_user.unlimited?
  - hodler_selected = payment.subscription_plan_id == hodler_plan.id
  %tr.db-plan--divider
  %tr.db-plan--divider
  %tr.db-plan--divider
  %tr.db-plan--divider
    %td(scope="col" colspan="4")
      %h5 Make an upgrade:

  %tr.db-plan.db-plan-investor{class: "db-plan--#{hodler_selected ? 'other' : 'selected'}"}
    = render partial: 'investor_card', locals: { days_left: nil, cost_presenters: cost_presenters[:investor] }

  %tr.db-plan--divider
  %tr.db-plan--divider

  %tr.db-plan.db-plan-hodler{class: "db-plan--#{hodler_selected ? 'selected' : 'other'}"}
    = render partial: 'hodler_card', locals: { days_left: nil, cost_presenters: cost_presenters[:hodler] }

  %tr.db-plan--divider
  - if referrer.present?
    - discount_presenter = Presenters::RefCodes::Show.new(referrer)
    %tr.text-success
      %td(scope="col")
        <i class="material-icons-round">check_circle</i>
      %td(scope="col")
        %b Discount activated
        %span.db-billing-item__info.text-dark
          - if discount_presenter.info?
            Thanks to the referral link from <b><a href="#{discount_presenter.visible_path}">#{discount_presenter.visible_name}</a></b>.
          Valid for the first purchase on the platform.
      %td(scope="col")
      %td.pl-4(scope="col")
        %b -#{discount_presenter.discount_percent}%
