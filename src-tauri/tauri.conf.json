{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Deltabadger",
  "version": "1.0.27",
  "identifier": "com.deltabadger.app",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "npm run build && bundle exec rails assets:precompile"
  },
  "app": {
    "windows": [],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "infoPlist": "Info.plist"
    },
    "resources": [
      "icons/tray-icon.png"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  }
}
